@import url(https://fonts.googleapis.com/css?family=Lato);

//generales
*
	user-select none
	font-family 'Lato', sans-serif

//--------------//

//OOCSS -- CSS ORIENTDO A OBJETOS
.displayNone
	display none
.textoCentrado
	text-align center
.strong
	font-weight bold
.bloqueado
	background-image url('../img/bloqueado.jpg')
.marginLateral
	margin 0 5px
.colorRojo
	color red

//clases generales


.mensaje
	position absolute
	background-color rgb(122, 159, 53)
	width 300px
	height auto
	border 5px solid rgb(122, 150, 60)
	border-radius 10px
	top 10px
	right 10px




//--------------//
.contenedor
	width 100%
	height 100%
.globos
	border 1px dashed black
	border-radius 10px
	margin 0 auto
	display block
.globo
	//fill rgb(170, 57, 57)
	animation 2s moverGlobo infinite linear

.globoDesinflado
	animation 3s desinflarGlobo 1 linear forwards


//Animaciones
@keyframes moverGlobo
	0%
		transform translateY(0px)
	25%
		transform translateY(20px)
	50%
		transform translateY(0px)
	75%
		transform translateY(-20px)
	100%
		transform translateY(0px)

@keyframes desinflarGlobo
	0%
		transform scale(1,1)
	50%
		transform scale(0.7,0.7)
	100%
		transform scale(0.5,0.5)

