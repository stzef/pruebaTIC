.competencias
	flex-wrap nowrap
	.competencia
		border 1px solid rgba(0,0,0,.1)
		margin 0px 5px
		padding 5px
		border-radius 5px
.descCompetencias
	article
		border 1px solid rgba(0,0,0,.4)
		background-color rgba(0,0,0,.1)
