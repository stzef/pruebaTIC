.personaje
	max-width 500px
	display block
	margin 0 auto
	.vendedor
		max-width 50%
	.computador
		max-width 49%
.opciones
	width 50%
	margin 0 auto
	display flex
	border-bottom: 1px solid gray;
	margin-bottom: 19px;
	.opcion
		width calc(100% / 6)
		margin 10px
		img
			width 100%
.tag
	border: 1px solid rgba(0,0,0,0.5)
	margin: 5px
	padding: 5px
	background-color: rgba(0,0,0,0.3)
	color: white
	font-weight: bold
	border-top-right-radius 10px
.delete
	margin-left 10px
	cursor pointer
	color red
.disabled
	filter grayscale(100%)
	-webkit-filter grayscale(100%)




