.personaje
	max-width 500px
	display block
	margin 0 auto
	.estudiante
		max-width 70%
	.mochila
		max-width 29%
.opciones
	width 50%
	margin 0 auto
	display flex
	border-bottom: 1px solid gray;
	margin-bottom: 19px;
	.opcion
		width calc(100% / 6)
		margin 10px
		img
			width 100%
.tag
	border: 1px solid gray
	margin: 5px
	padding: 5px
	background-color: gray
	color: white
	font-weight: bold
	border-radius: 10px
.delete
	margin-left 10px
	cursor pointer
	color red
.disabled
	filter grayscale(100%)
	-webkit-filter grayscale(100%)




