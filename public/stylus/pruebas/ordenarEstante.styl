colorFondoEstante = #42240C
colorBorderEstante = #77461D
.imgVendedor
	background-image url('/public/img/pruebas/vendedor.png')
	height 300px
	background-size cover
.estante
	border 4px solid colorBorderEstante
	width 100%
	height 100%
	background-color colorFondoEstante
	.entrepano
		height 100px
		border-bottom 2px solid colorBorderEstante
		&:last-child
			border-bottom none
.productosEstantes
	display flex
	justify-content space-around
	/.producto
		width calc(100% / 6)
		img
			width 100%
article[data-dropzone]
	display flex
	flex-wrap wrap

.disabled
	-webkit-filter  opacity(50%);
