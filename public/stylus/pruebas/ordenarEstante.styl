colorFondoEstante = #42240C
colorBorderEstante = #77461D
.imgVendedor
	width 260px
	height 300px
	display inline-block
.imgestante
	width 600px
	display inline-block
.estante
	border 4px solid colorBorderEstante
	width 100%
	height 100%
	background-color colorFondoEstante
	.entrepano
		height 100px
		border-bottom 4px solid colorBorderEstante
		&:last-child
			border-bottom none
.productosEstantes
	display flex
	justify-content space-around
	margin-top 10px
	/.producto
		width 100px
		font-size 100px
		p
			margin 0
		img
			width 100%

.icon
	&-arroz
		color red
	&-destornillador
		color gray
	&-dulce
		color green
	&-panecillo
		color pink
	&-zanahoria
		color orange
article[data-dropzone]
	display flex
	flex-wrap wrap

.disabled
	-webkit-filter  grayscale(100%);
